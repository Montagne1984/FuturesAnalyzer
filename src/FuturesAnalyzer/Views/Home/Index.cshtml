            $.post($('#form').attr('action'), values, function (data) {
                var report = data.Report;
                var categories = [];
                var contracts = [];
                var balances = [];
                var maxSingleDelta = 0;
                var minSingleDelta = 0;
                var minBalance = 0;
                var maxBalance = 0;
                var lastBalance = 0;
                var annualProfits = {};
                var lastYearEndBalance = 0;
                var yesterdayYear = 0;
                var endBalance = 0;
                var averageBalance = 0;
                if (report.length > 0) {
                    $.each(report, function(index, value) {
                        categories.push(value.Date);
                        contracts.push(value.Contract ? value.Contract.Price * value.Contract.Direction : 0);
                        balances.push(value.Balance);
                        var delta = value.Balance - lastBalance;
                        maxSingleDelta = Math.max(maxSingleDelta, delta);
                        minSingleDelta = Math.min(minSingleDelta, delta);
                        maxBalance = Math.max(maxBalance, value.Balance);
                        minBalance = Math.min(minBalance, value.Balance);
                        lastBalance = value.Balance;
                        var date = new Date(value.Date);
                        var year = date.getFullYear();
                        if (year !== yesterdayYear) {
                            if (yesterdayYear !== 0) {
                                annualProfits[yesterdayYear] = report[index - 1].Balance - lastYearEndBalance;
                                lastYearEndBalance = report[index - 1].Balance;
                            }
                            yesterdayYear = year;
                        }
                    });

                    var endDate = new Date(report[report.length - 1].Date);
                    var endYear = endDate.getFullYear();
                    annualProfits[endYear] = report[report.length - 1].Balance - lastYearEndBalance;
                    endBalance = report[report.length - 1].Balance;
